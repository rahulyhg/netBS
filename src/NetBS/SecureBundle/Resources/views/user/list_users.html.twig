{% extends '@NetBSCore/layout/backend.layout.twig' %}

{% block main %}

    <div class="container-fluid">

        {% set addUserBtn %}<a href="{{ path('netbs.secure.user.add_user') }}" class="btn btn-primary">Ajouter un utilisateur</a>{% endset %}

        {% include '@NetBSCore/includes/header.include.twig' with {
        header: "Utilisateurs",
        subHeader: "Rechercher un utilisateur enregistr√©",
        actions: [addUserBtn]
        } %}

        <div class="row">
            <div class="col-lg-3 col-sm-6 col-12">
                <form method="get">
                    <div class="form-group d-flex">
                        <div class="input-group">
                            <input id="username" name="username" value="{{ username }}" type="text" placeholder="Nom d'utilisateur" class="form-control">
                        </div>

                        <button type="submit" class="btn btn-primary ml-2">Rechercher</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="row">
            <div class="col-12">

                <div class="card card-table">
                    <div class="card-body">
                        {{ render_list('netbs.secure.users', 'basic', {username: username}) }}
                    </div>
                </div>

            </div>
        </div>

    </div>

{% endblock %}
