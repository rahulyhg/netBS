<h5>Informations</h5>
<h6>Créances</h6>
<table class="table table-sm">
    <thead>
    <tr>
        <th>Titre</th>
        <th>Montant</th>
    </tr>
    </thead>
    <tbody>
    {% for creance in facture.creances %}
        <tr>
            <td>{{ creance.titre }}</td>
            <td>{{ creance.montant }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<h6>Rappels</h6>
<table class="table table-sm">
    <thead>
    <tr>
        <th>Date d'émission</th>
        <th>Date d'impression</th>
    </tr>
    </thead>
    <tbody>
    {% for rappel in facture.rappels %}
        <tr>
            <td>{{ rappel.date|date(param('format', 'php_date')) }}</td>
            <td>{{ rappel.dateImpression|date(param('format', 'php_date')) }}</td>
        </tr>
    {% else %}
        <tr>
            <td>Aucun</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
